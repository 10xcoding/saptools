<mvc:View
    controllerName="saptools.controller.TcodeList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Table
        id="tcodeList"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{tcode>/d/results}" >
        <headerToolbar>
			<Toolbar>
				<Title text="{i18n>tcodeListTitle}"/>
				<ToolbarSpacer/>
				<SearchField width="60%" search="onFilterTcodes"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="11em">
				<Text text="{i18n>columnName}"/>
			</Column>
			<Column width="25em">
				<Text text="{i18n>columnDescription}"/>
			</Column>
			<Column>
				<Text text="{i18n>columnProgram}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem
				type="Navigation"
				press="onPress">
				<cells>
					<Text text="{tcode>TCode}"/>
					<Text text="{tcode>Description}"/>
					<Text text="{tcode>Program}"/>
				</cells>
			</ColumnListItem>
		</items>
    </Table>
</mvc:View>